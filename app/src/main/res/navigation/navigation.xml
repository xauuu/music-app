<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainActivity">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.finalproject.fragment.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.finalproject.fragment.LibraryFragment"
        android:label="LibraryFragment" >
        <action
            android:id="@+id/action_libraryFragment_to_songActivity"
            app:destination="@id/songActivity" />
    </fragment>
    <activity
        android:id="@+id/songActivity"
        android:name="com.example.finalproject.SongActivity"
        android:label="activity_song2"
        tools:layout="@layout/activity_song2" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.finalproject.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>